@model Database.Models.Serie
@{
    ViewData["Title"] = ViewData["Name"];
}

<div style="text-align:center;">
    <h2 class="mb-3">@Model.Name</h2>
    <iframe width="1120" height="630" src="https://www.youtube.com/embed/@Model.Link" frameborder="0" allowfullscreen></iframe>
</div>
<div class="mt-3 d-flex justify-content-between">
    <a class="btn btn-warning btn-lg" asp-action="EditarSerie" asp-route-id="@Model.Id">
        <i class="bi bi-pencil-fill"></i> Editar
    </a>
    <a class="btn btn-danger btn-lg" asp-action="BorrarSerie" asp-route-id="@Model.Id">
        <i class="bi bi-eraser-fill"></i> Eliminar
    </a>
</div>